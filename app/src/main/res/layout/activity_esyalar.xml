<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_esyalar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cengiz.cengo.Esyalar"
    >


    <TextView android:id="@+id/esyalar"
        android:text="EŞYALAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColorLink="@color/colorAccent"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:fontFamily="casual"
        android:textSize="36sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/esya_ogren"
        android:text=" Öğren "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="esyaogren"
        android:layout_marginTop="28dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/esyalar"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <Button android:id="@+id/esya_testet"
        android:text=" Oyna "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"

        android:backgroundTint="@android:color/holo_green_light"
        android:layout_below="@+id/esya_ogren"
        android:layout_alignLeft="@+id/esya_ogren"
        android:layout_alignStart="@+id/esya_ogren"
        android:textSize="24sp"
        android:fontFamily="serif-monospace"
        android:textStyle="normal|bold" />

    <Button
        android:text=" TÜM EŞYALAR "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/tumEsyalar"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/esya_testet"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:fontFamily="serif-monospace"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/gunees"
        android:id="@+id/imageView8"
        android:layout_below="@+id/tumEsyalar"
        android:layout_alignRight="@+id/esya_ogren"
        android:layout_alignEnd="@+id/esya_ogren"
        android:layout_marginTop="23dp" />

</RelativeLayout>
