<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hakkimizda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cengiz.cengo.Hakkimizda"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText2"
        android:text="Mart 2017"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:textAllCaps="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/gunees"
        android:layout_marginBottom="23dp"
        android:id="@+id/imageView4"
        android:layout_above="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText3"
        android:text="Merve Nur Yılmaz \nCengizcan Güler \nTuba Biner \nTansu Sümer"
        android:textAlignment="center"
        android:textColor="?attr/actionMenuTextColor"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:text="Güneş uygulaması, otizmli çocukların eğitimine yardımcı olmak amacıyla BiKlavye grubu tarafından bitirme projesi olarak geliştirilmiştir."
        android:singleLine="false"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="24sp"
        android:layout_alignParentTop="true" />

</RelativeLayout>