<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_renk_tamami"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tansu.gunes.RenkTamami">

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/kirmizi"
            android:id="@+id/kirmizi"
            android:layout_marginRight="5dp"
            android:onClick="oku"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/mavi"
            android:id="@+id/mavi"
            android:onClick="oku"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/sari"
            android:layout_weight="1"
            android:onClick="oku"
            android:id="@+id/sari" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@+id/firstLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Kırmızı"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/text_kirmizi"
            android:layout_weight="1" />

        <TextView
            android:text="Mavi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_mavi"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:text="Sarı"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/text_sari"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/thirdLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/yesil"
            android:id="@+id/yesil"
            android:layout_marginRight="5dp"
            android:onClick="oku"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/pembe"
            android:id="@+id/pembe"
            android:onClick="oku"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/beyaz"
            android:layout_weight="1"
            android:onClick="oku"
            android:id="@+id/beyaz" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@+id/thirdLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Yeşil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/text_yesil"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />

        <TextView
            android:text="Pembe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_pembe"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:text="Beyaz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/text_beyaz"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/fifthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourthLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/turuncu"
            android:id="@+id/turuncu"
            android:layout_marginRight="5dp"
            android:onClick="oku"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/mor"
            android:id="@+id/mor"
            android:onClick="oku"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/siyah"
            android:layout_weight="1"
            android:onClick="oku"
            android:id="@+id/siyah" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/sixthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@+id/fifthLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Turuncu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/text_turuncu"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />

        <TextView
            android:text="Mor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_mor"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:text="Siyah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/text_siyah"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/seventhLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sixthLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/kahverengi"
            android:id="@+id/kahverengi"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:onClick="oku"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/eighthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seventhLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:text="Kahverengi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/text_kahverengi" />
    </LinearLayout>
    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />
</RelativeLayout>
