<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tane_ogren"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tuba.gunes.tane_ogren"
    android:background="@drawable/background">

    <TextView android:id="@+id/tane_hosgeldiniz"
        android:text="TANE KAVRAMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:textColorLink="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="36sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_dark"
        android:fontFamily="casual" />

    <Button android:id="@+id/meyvelerle_ogren"
        android:text=" Meyveler ile Öğren "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="meyvelerleogren"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/tane_hosgeldiniz"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:fontFamily="serif-monospace"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <Button android:id="@+id/esyalarla_ogren"
        android:text=" Eşyalar ile Öğren "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="esyalarlaogren"
        android:background="@android:color/holo_red_light"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:fontFamily="serif-monospace" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/gunees"
        android:id="@+id/imageView6"
        android:layout_below="@+id/esyalarla_ogren"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

</RelativeLayout>
