<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tum_sayilar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tansu.gunes.tumSayilar"
>

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="3">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/bir"
        android:id="@+id/imageView10"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:onClick="oku"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/iki"
        android:id="@+id/imageView11"
        android:layout_weight="1"
        android:onClick="oku"/>

        <ImageView
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        app:srcCompat="@drawable/uc"
        android:layout_weight="1"
        android:id="@+id/imageView3"
            android:onClick="oku"/>
        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@+id/firstLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="BİR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/txtbir"
            android:layout_marginRight="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_weight="1"
            android:textSize="24sp" />
        <TextView
            android:text="İKİ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtiki"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_weight="1"
            android:textSize="24sp" />
        <TextView
            android:text="ÜÇ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/txtuc"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/thirdLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/dort"
            android:id="@+id/imageViewdort"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="oku"/>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/bes"
            android:id="@+id/imageViewbes"
            android:layout_weight="1"
            android:onClick="oku"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/alti"
            android:layout_weight="1"
            android:id="@+id/imageViewalti"
            android:onClick="oku"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@+id/thirdLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="DÖRT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/txt4"
            android:layout_marginRight="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_weight="1"
            android:textSize="24sp" />
        <TextView
            android:text="BEŞ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt5"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_weight="1"
            android:textSize="24sp" />
        <TextView
            android:text="ALTI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/txt6"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/fifthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourthLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/yedi"
            android:id="@+id/imageViewyedi"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="oku"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/sekiz"
            android:id="@+id/imageViewsekiz"
            android:layout_weight="1"
            android:onClick="oku"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/dokuz"
            android:layout_weight="1"
            android:id="@+id/imageView9"
            android:onClick="oku"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/sixthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@+id/fifthLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="YEDİ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/txt7"
            android:layout_marginRight="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_weight="1"
            android:textSize="24sp" />

        <TextView
            android:text="SEKİZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt8"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_weight="1"
            android:textSize="24sp" />
        <TextView
            android:text="DOKUZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/txt9"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/seventhLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sixthLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/sifir"
        android:id="@+id/imageViewsifir"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:onClick="oku"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/eighthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seventhLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="1">
    <TextView
        android:text="SIFIR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:id="@+id/txt0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp" />
</LinearLayout>
    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
</RelativeLayout>
